<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/ib_expand_contract_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_unfold_less"
        android:contentDescription="@string/desc_collapse" />

    <ImageView
        android:id="@+id/iv_folder_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/cd_folder"
        android:scaleX="1.25"
        android:scaleY="1.25"
        app:layout_constraintBottom_toBottomOf="@+id/ib_expand_contract_folder"
        app:layout_constraintStart_toEndOf="@+id/ib_expand_contract_folder"
        app:layout_constraintTop_toTopOf="@+id/ib_expand_contract_folder"
        app:srcCompat="@drawable/ic_baseline_folder" />

    <TextView
        android:id="@+id/tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/iv_folder_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_folder_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_folder_icon"
        tools:text="Han Tyumi and the Murder of the Universe" />
</androidx.constraintlayout.widget.ConstraintLayout>